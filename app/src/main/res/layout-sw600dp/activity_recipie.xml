<?xml version="1.0" encoding="utf-8"?>
    <!-- LinearLayout for holding three Android-Me images -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/android_me_linear_layouttablet"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context=".Recipe">


<LinearLayout
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

<FrameLayout android:id="@+id/ingredient_container"
    android:layout_width="400dp"
    android:layout_height="130dp"
    android:scaleType="centerInside"/>

    <FrameLayout
        android:id="@+id/steps_container"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"/>
</LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/android_me_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <!-- Three containers for each Android-Me body part -->
        <!-- This container holds the head BodyPartFragment of the custom Android-Me image -->
        <LinearLayout android:id="@+id/ingredient_all"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
